{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{#if isMajor}}v{{{newMajor}}}{{else}}{{#if isSingleVersion}}v{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}{{/if}}",
  "commitMessageSuffix": "",
  "prFooter": "Signed-off-by: renovate[bot] <29139614+renovate[bot]@users.noreply.github.com>",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "pin",
        "digest"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-non-major"
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackageNames": [
        "golang"
      ],
      "groupName": "Go Docker base image"
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackageNames": [
        "alpine"
      ],
      "groupName": "Alpine Docker base image",
      "versioning": "docker"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "groupName": "Go dependencies"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "indirect"
      ],
      "enabled": false,
      "description": "Ignore indirect dependencies - they update automatically via direct dependency upgrades"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions"
    }
  ],
  "golang": {
    "enabled": true
  },
  "helm-values": {
    "enabled": true
  }
}
